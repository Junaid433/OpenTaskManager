<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OpenTaskManager.Views.RunTaskDialog"
        Title="OpenTaskManager - Run New Task"
        Width="500" Height="200"
        Background="#202020"
        WindowStartupLocation="CenterOwner">
    
    <Border Padding="20">
        <Grid RowDefinitions="*,Auto">
            <!-- Input Area -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" Spacing="16">
                <TextBlock Text="Enter the name of a program, folder, document, or Internet resource, and OpenTaskManager will open it for you." 
                           Foreground="#FFFFFF" FontSize="13" TextWrapping="Wrap"/>
                
                <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                    <TextBlock Grid.Column="0" Text="Open:" Foreground="#FFFFFF" FontSize="13" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBox Grid.Column="1" x:Name="InputTextBox" Foreground="#FFFFFF" Background="#383838" 
                             BorderBrush="#505050" Padding="8,6" FontSize="13"/>
                    <Button Grid.Column="2" Content="Browse" Background="#383838" Foreground="#FFFFFF" 
                            Click="OnBrowseClick" Padding="12,6" Margin="8,0,0,0"/>
                </Grid>
                
                <CheckBox x:Name="SudoCheckBox" Content="Elevated Privileges" Foreground="#FFFFFF" FontSize="13"/>
            </StackPanel>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,16,0,0" VerticalAlignment="Bottom">
                <Button Content="OK" Background="#0078D4" Foreground="#FFFFFF" 
                        Click="OnOkClick" Padding="24,6" MinWidth="80"/>
                <Button Content="Cancel" Background="#383838" Foreground="#FFFFFF" 
                        Click="OnCancelClick" Padding="24,6" MinWidth="80"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
