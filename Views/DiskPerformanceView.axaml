<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OpenTaskManager.ViewModels"
             xmlns:controls="using:OpenTaskManager.Controls"
             mc:Ignorable="d"
             x:Class="OpenTaskManager.Views.DiskPerformanceView"
             x:DataType="vm:MainViewModel">

    <Grid>
        <!-- Selected disk details -->
        <Grid RowDefinitions="Auto,*,Auto,*,Auto,Auto" IsVisible="{Binding SelectedDisk, Converter={x:Static ObjectConverters.IsNotNull}}">
            <!-- Header -->
            <Border Grid.Row="0" Background="#1F1F1F" Padding="18,12" BorderBrush="#2D2D2D" BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="{Binding SelectedDisk.DisplayName}" FontSize="24" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                               Text="{Binding SelectedDisk.Model}" 
                               FontSize="13" Foreground="#A0A0A0" 
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    
                    <Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto" Margin="0,6,0,0">
                        <TextBlock Grid.Column="0" Text="Active time" FontSize="13" Foreground="#888888" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="100%" FontSize="13" Foreground="#888888" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Active Time Graph -->
            <Border Grid.Row="1" Background="#1A1A1A" Padding="0" Margin="0">
                <controls:PerformanceGraph Values="{Binding SelectedDisk.ActiveTimeHistory}" 
                                            MaxValue="100" 
                                            LineBrush="#2ECC71" 
                                            FillBrush="#1A2ECC71" 
                                            ShowGrid="True"/>
            </Border>

            <!-- Time labels for first graph + label for second graph -->
            <Grid Grid.Row="2" Margin="12,6,12,6" ColumnDefinitions="*,Auto">
                <TextBlock Text="60 seconds" Foreground="#888888" FontSize="10" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="0" Foreground="#888888" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>

            <!-- Disk Transfer Rate section -->
            <Border Grid.Row="3" Background="#1A1A1A" Padding="0">
                <Grid RowDefinitions="Auto,*,Auto">
                    <Grid Grid.Row="0" Margin="18,8,18,0" ColumnDefinitions="*,Auto">
                        <TextBlock Text="Disk transfer rate" FontSize="13" Foreground="#888888"/>
                        <TextBlock Grid.Column="1" Text="250 MB/s" FontSize="13" Foreground="#888888"/>
                    </Grid>
                    <controls:PerformanceGraph Grid.Row="1" 
                                                Values="{Binding SelectedDisk.TransferRateHistory}" 
                                                MaxValue="100" 
                                                LineBrush="#9B59B6" 
                                                FillBrush="#1A9B59B6" 
                                                ShowGrid="True"
                                                Margin="0,4,0,0"/>
                    <Grid Grid.Row="2" Margin="12,6,12,12" ColumnDefinitions="*,Auto">
                        <TextBlock Text="60 seconds" Foreground="#888888" FontSize="10" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="0" Foreground="#888888" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Stats Footer -->
            <Border Grid.Row="4" Background="#1F1F1F" Padding="16,12">
                <Grid ColumnDefinitions="*,*" ColumnSpacing="24">
                    <!-- Left stats -->
                    <Grid Grid.Column="0">
                        <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" RowSpacing="12">
                            <!-- Row 0: Active time, Average response time -->
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Active time" Foreground="#888888" FontSize="11"/>
                                <TextBlock Text="{Binding SelectedDisk.ActiveTimeFormatted}" 
                                           Foreground="#FFFFFF" FontSize="22" FontWeight="Normal"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock Text="Average response time" Foreground="#888888" FontSize="11"/>
                                <TextBlock Text="{Binding SelectedDisk.ResponseTimeFormatted}" 
                                           Foreground="#FFFFFF" FontSize="18" FontWeight="Normal"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2"/>

                            <!-- Row 1: Read speed, Write speed -->
                            <StackPanel Grid.Row="1" Grid.Column="0">
                                <TextBlock Text="Read speed" Foreground="#888888" FontSize="11"/>
                                <TextBlock Text="{Binding SelectedDisk.ReadSpeedFormatted}" 
                                           Foreground="#FFFFFF" FontSize="18" FontWeight="Normal"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <TextBlock Text="Write speed" Foreground="#888888" FontSize="11"/>
                                <TextBlock Text="{Binding SelectedDisk.WriteSpeedFormatted}" 
                                           Foreground="#FFFFFF" FontSize="18" FontWeight="Normal"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2"/>
                        </Grid>
                    </Grid>

                    <!-- Right stats -->
                    <Grid Grid.Column="1" Margin="16,0,0,0">
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="6">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Capacity:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedDisk.CapacityFormatted}" Foreground="#FFFFFF" FontSize="14"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Formatted:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedDisk.CapacityFormatted}" Foreground="#FFFFFF" FontSize="14"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="System Disk:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedDisk.SystemDiskFormatted}" Foreground="#FFFFFF" FontSize="14"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Page file:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedDisk.PageFileFormatted}" Foreground="#FFFFFF" FontSize="14"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Type:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedDisk.Type}" Foreground="#FFFFFF" FontSize="14"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            <Border Grid.Row="5" Height="12" Background="#1F1F1F"/>
        </Grid>

        <!-- No disk selected placeholder -->
        <Border Background="#1A1A1A" 
                IsVisible="{Binding SelectedDisk, Converter={x:Static ObjectConverters.IsNull}}">
            <TextBlock Text="No disk detected" 
                       Foreground="#888888" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>