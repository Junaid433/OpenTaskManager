<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OpenTaskManager.ViewModels"
             xmlns:controls="using:OpenTaskManager.Controls"
             mc:Ignorable="d"
             x:Class="OpenTaskManager.Views.NetworkPerformanceView"
             x:DataType="vm:MainViewModel">

    <Grid>
        <!-- Selected network interface details -->
        <Grid RowDefinitions="Auto,*,Auto,Auto" IsVisible="{Binding SelectedNetworkInterface, Converter={x:Static ObjectConverters.IsNotNull}}">
            <!-- Header -->
            <Border Grid.Row="0" Background="#1F1F1F" Padding="18,12" BorderBrush="#2D2D2D" BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="{Binding SelectedNetworkInterface.DisplayName}" FontSize="24" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                    </StackPanel>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                               Text="{Binding SelectedNetworkInterface.AdapterName}" 
                               FontSize="13" Foreground="#A0A0A0" 
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    
                    <Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto" Margin="0,6,0,0">
                        <TextBlock Grid.Column="0" Text="Throughput" FontSize="13" Foreground="#888888" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding SelectedNetworkInterface.LinkSpeedFormatted}" FontSize="13" Foreground="#888888" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Throughput Graph -->
            <Border Grid.Row="1" Background="#1A1A1A" Padding="0" Margin="0">
                <Grid RowDefinitions="*,Auto">
                    <Grid Grid.Row="0">
                        <!-- Dual line graph showing send and receive -->
                        <controls:PerformanceGraph Values="{Binding SelectedNetworkInterface.ThroughputHistory}" 
                                                    MaxValue="100" 
                                                    LineBrush="#E74C3C" 
                                                    FillBrush="#1AE74C3C" 
                                                    ShowGrid="True"/>
                    </Grid>
                    <Grid Grid.Row="1" Margin="12,6,12,12" ColumnDefinitions="*,Auto">
                        <TextBlock Text="60 seconds" Foreground="#888888" FontSize="10" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="0" Foreground="#888888" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Send/Receive indicators and legend -->
            <Border Grid.Row="2" Background="#1A1A1A" Padding="18,8">
                <Grid ColumnDefinitions="*,*">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Border Width="12" Height="3" Background="#E74C3C" VerticalAlignment="Center"/>
                            <TextBlock Text="Send" Foreground="#888888" FontSize="11" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SelectedNetworkInterface.SendSpeedFormatted}" 
                                   Foreground="#E74C3C" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Border Width="12" Height="3" Background="#3498DB" VerticalAlignment="Center"/>
                            <TextBlock Text="Receive" Foreground="#888888" FontSize="11" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SelectedNetworkInterface.ReceiveSpeedFormatted}" 
                                   Foreground="#3498DB" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Stats Footer -->
            <Border Grid.Row="3" Background="#1F1F1F" Padding="16,12">
                <Grid ColumnDefinitions="*,*" ColumnSpacing="24">
                    <!-- Left stats: Send/Receive speeds -->
                    <Grid Grid.Column="0">
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="16">
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Send" Foreground="#888888" FontSize="11"/>
                                <TextBlock Text="{Binding SelectedNetworkInterface.SendSpeedFormatted}" 
                                           Foreground="#FFFFFF" FontSize="22" FontWeight="Normal"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock Text="Receive" Foreground="#888888" FontSize="11"/>
                                <TextBlock Text="{Binding SelectedNetworkInterface.ReceiveSpeedFormatted}" 
                                           Foreground="#FFFFFF" FontSize="22" FontWeight="Normal"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Right stats: Network info -->
                    <Grid Grid.Column="1" Margin="16,0,0,0">
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="6">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Adapter name:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedNetworkInterface.AdapterName}" Foreground="#FFFFFF" FontSize="14" TextTrimming="CharacterEllipsis"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Connection type:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedNetworkInterface.ConnectionType}" Foreground="#FFFFFF" FontSize="14"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="IPv4 address:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedNetworkInterface.Ipv4Address}" Foreground="#FFFFFF" FontSize="14"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="IPv6 address:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedNetworkInterface.Ipv6Address}" Foreground="#FFFFFF" FontSize="14" TextTrimming="CharacterEllipsis"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Link speed:" Foreground="#888888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedNetworkInterface.LinkSpeedFormatted}" Foreground="#FFFFFF" FontSize="14"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- No interface selected placeholder -->
        <Border Background="#1A1A1A" 
                IsVisible="{Binding SelectedNetworkInterface, Converter={x:Static ObjectConverters.IsNull}}">
            <TextBlock Text="No network interface detected" 
                       Foreground="#888888" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>